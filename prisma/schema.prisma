generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {

  id        Int      @default(autoincrement())
  createdAt DateTime @default(now())

  name      String
  email     String   @unique
  username  String   @unique
  password  String
  img       String
  otpValue  String
  otpExpiry DateTime
  verified  Boolean  @default(false)
  role      Role     @default(USER)
  dob       DateTime

}

enum Role {

  OWNER
  ADMIN
  MODERATOR
  UPLOADER
  USER

}

enum SeasonsOfYear {

  WINTER
  SPRING
  SUMMER
  FALL

}

